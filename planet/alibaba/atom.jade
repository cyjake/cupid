doctype xml
feed(xmlns="http://www.w3.org/2005/Atom")
  title(type="text", xml:lang="en")= title
  link(type="application/atom+xml", href="#{site}/atom.xml", rel="self")
  link(type="text/html", href="#{site}", rel="alternate")
  updated= updated.toISOString()
  id= site
  rights #{title} &#169; #{updated.year()}
  for post in posts
    entry
      title= post.title
      link(href="#{post.link}")
      updated= post.updated.toISOString()
      id= post.link
      content(type="html")= post.content
