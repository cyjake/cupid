doctype 5
html(lang='en')
  head
    meta(charset="utf-8")
    title= title
    link(rel="stylesheet", type="text/css", href="http://g.tbcdn.cn/thx/cube/1.0.3/neat.css")
    link(rel="stylesheet", type="text/css", href="planet.css")
    link(rel="stylesheet", type="text/css", href="solarized-light.css")
  body
    nav
      a.logo(href='http://ux.etao.com')
        span.iconfont.at &#481;
        span.iconfont &#482;
      section
        h3 Feeds
        ul.feeds
          for feed in feeds
            li
              a(href="#{feed.site}")
                i.iconfont &#483;
                | !{feed.title}
      section
        h3 Subscribe
        a(href="atom.xml")
          i.iconfont &#483;
          | Atom
      section
        p Built #{updated.fromNow()}
        p
          | Powered by&nbsp;
          a(href="https://github.com/dotnil/cupid") cupid
    div.main
      for post in posts
        section
          div.author
            address
              a(href="#{post.author.link}")
                img(src="#{post.author.gravatar}")
              a(href="#{post.author.link}")
                span.name= post.author.name
              a(href="#{post.link}")
                time(datetime="#{post.updated.format()}")= post.updated.fromNow()
          article
            h1
              a(href="#{post.link}")= post.title
            | !{post.content}